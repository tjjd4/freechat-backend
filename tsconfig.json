{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}